{
   "manifest_version": 3,
   "name": "__MSG_extName__",
   "default_locale": "en",
   "version": "2024.07.21",
   "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/logo_24x24.png",
      "default_title": "__MSG_actionTitle__"
   },
   "description": "__MSG_extDescription__",
   "homepage_url": "https://immmmm.com",
   "icons": {
      "128": "assets/logo.png",
      "16": "assets/logo.png",
      "48": "assets/logo.png"
   },
   "background": {
      "service_worker": "js/background.js"
    },
   "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "contextMenus",
      "clipboardRead",
      "clipboardWrite",
      "offscreen",
      "scripting"
   ],
   "host_permissions": [
      "http://*/*",
      "https://*/*"
   ],
   "commands": {
      "open-extension": {
        "description": "Open my extension",
        "suggested_key": {
            "default": "Ctrl+Shift+F",
            "mac": "MacCtrl+Shift+F"
         }
      },
      "copy-markdown-link": {
         "description": "Copy markdown link",
         "suggested_key": {
            "default": "Alt+2",
            "mac": "Alt+2"
         }
      },
      "copy-clean-link": {
         "description": "Copy clean link",
         "suggested_key": {
            "default": "Alt+4",
            "mac": "Alt+4"
         }
      },
      "generate-python-command": {
         "description": "Generate Python command",
         "suggested_key": {
            "default": "Alt+5",
            "mac": "Alt+5"
         }
      }
    }
}
